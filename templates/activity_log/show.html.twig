 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Activity Log Details{% endblock %}

{% block body %}
<style>
    .log-detail-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .log-detail-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #1D4A23;
    }

    .log-detail-header h1 {
        color: #1D4A23;
        margin: 0;
        font-size: 28px;
        font-weight: bold;
    }

    .action-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .action-create {
        background-color: #d4edda;
        color: #155724;
    }

    .action-update {
        background-color: #fff3cd;
        color: #856404;
    }

    .action-delete {
        background-color: #f8d7da;
        color: #721c24;
    }

    .action-login {
        background-color: #cfe2ff;
        color: #084298;
    }

    .action-logout {
        background-color: #e2e3e5;
        color: #383d41;
    }

    .log-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #1D4A23;
    }

    .info-label {
        font-size: 13px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .info-value {
        font-size: 18px;
        color: #1D4A23;
        font-weight: bold;
    }

    .description-section {
        background: #e8f5e9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .description-section h3 {
        color: #1D4A23;
        margin: 0 0 15px 0;
        font-size: 18px;
    }

    .description-text {
        color: #333;
        line-height: 1.6;
        font-size: 16px;
    }

    .affected-data-section {
        background: #fff3cd;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .affected-data-section h3 {
        color: #856404;
        margin: 0 0 15px 0;
        font-size: 18px;
    }

    .data-item {
        padding: 10px;
        background: white;
        border-radius: 6px;
        margin-bottom: 10px;
    }

    .data-label {
        font-weight: 600;
        color: #856404;
    }

    .data-value {
        color: #333;
    }

    .log-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .role-badges {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }

    .role-badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        background: #e8f5e9;
        color: #1D4A23;
    }

    .ip-address {
        font-family: monospace;
        background: #e9ecef;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 16px;
    }
</style>

<div class="log-detail-container">
    <div class="log-detail-header">
        <h1>üìã Activity Log #{{ log.id }}</h1>
        <span class="action-badge action-{{ log.action }}">{{ log.action }}</span>
    </div>

    <!-- Log Information Grid -->
    <div class="log-info-grid">
        <div class="info-card">
            <div class="info-label">Log ID</div>
            <div class="info-value">#{{ log.id }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">User ID</div>
            <div class="info-value">
                {% if log.user %}
                    #{{ log.user.id }}
                {% else %}
                    <em style="font-size: 14px;">N/A</em>
                {% endif %}
            </div>
        </div>

        <div class="info-card">
            <div class="info-label">Username</div>
            <div class="info-value">{{ log.user ? log.user.username : 'System' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">User Role(s)</div>
            <div class="info-value">
                {% if log.user %}
                    <div class="role-badges">
                        {% for role in log.user.roles %}
                            <span class="role-badge">{{ role|replace({'ROLE_': ''}) }}</span>
                        {% endfor %}
                    </div>
                {% else %}
                    <em style="font-size: 14px;">‚Äî</em>
                {% endif %}
            </div>
        </div>

        <div class="info-card">
            <div class="info-label">Action Performed</div>
            <div class="info-value">{{ log.action|capitalize }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Entity Type</div>
            <div class="info-value">{{ log.entity ?? 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Entity ID</div>
            <div class="info-value">{{ log.entityId ? '#' ~ log.entityId : 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">IP Address</div>
            <div class="info-value">
                {% if log.ipAddress %}
                    <span class="ip-address">{{ log.ipAddress }}</span>
                {% else %}
                    <em style="font-size: 14px;">N/A</em>
                {% endif %}
            </div>
        </div>

        <div class="info-card">
            <div class="info-label">Date</div>
            <div class="info-value">{{ log.createdAt|date('M d, Y') }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Time</div>
            <div class="info-value">{{ log.createdAt|date('h:i:s A') }}</div>
        </div>
    </div>

    <!-- Description Section -->
    {% if log.description %}
    <div class="description-section">
        <h3>üìù Description</h3>
        <p class="description-text">{{ log.description }}</p>
    </div>
    {% endif %}

    <!-- Affected Data Section -->
    {% if log.entity and log.entityId %}
    <div class="affected-data-section">
        <h3>üì¶ Affected Data</h3>
        <div class="data-item">
            <span class="data-label">Entity Type:</span>
            <span class="data-value">{{ log.entity }}</span>
        </div>
        <div class="data-item">
            <span class="data-label">Entity ID:</span>
            <span class="data-value">#{{ log.entityId }}</span>
        </div>
        <div class="data-item">
            <span class="data-label">Action:</span>
            <span class="data-value">{{ log.action|capitalize }}</span>
        </div>
        {% if log.ipAddress %}
        <div class="data-item">
            <span class="data-label">IP Address:</span>
            <span class="data-value"><span class="ip-address">{{ log.ipAddress }}</span></span>
        </div>
        {% endif %}
    </div>
    {% endif %}

    <!-- Actions -->
    <div class="log-actions">
        <a href="{{ path('app_activity_log_index') }}" class="btn btn-secondary">‚Üê Back to Logs</a>
    </div>
</div>
{% endblock %}