 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block body %}
<style>
    .form-container {
        width: 90%;
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .form-header {
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #1D4A23;
    }

    .form-header h1 {
        color: #1D4A23;
        margin: 0 0 10px 0;
        font-size: 28px;
        font-weight: bold;
    }

    .form-header p {
        color: #666;
        margin: 0;
        font-size: 15px;
    }

    .creator-info {
        background-color: #f0f8ff;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
        color: #2e5d24;
        text-align: center;
    }

    .badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: bold;
        color: white;
    }

    .badge-admin {
        background-color: #9b59b6;
    }

    .badge-staff {
        background-color: #3498db;
    }

    .form-group {
        margin-bottom: 25px;
    }

    label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 15px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.3s ease;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #1D4A23;
        box-shadow: 0 0 0 3px rgba(29, 74, 35, 0.1);
    }

    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
    }

    .btn {
        padding: 12px 30px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 15px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .delete-form {
        display: inline;
        margin: 0;
    }

    .help-text {
        font-size: 13px;
        color: #666;
        margin-top: 5px;
        font-style: italic;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .orders-warning {
        background-color: #fff3cd;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        border-left: 4px solid #ffc107;
    }

    .orders-warning strong {
        color: #856404;
    }
</style>

<div class="form-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="form-header">
        <h1>‚úèÔ∏è Edit Customer</h1>
        <p>Update customer information below.</p>
    </div>

    {% if customer.createdBy %}
        <div class="creator-info">
            Created by: 
            <span class="badge {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'badge-admin' : 'badge-staff' }}">
                {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'üëë ' : 'üë§ ' }}{{ customer.createdBy.username }}
            </span>
        </div>
    {% endif %}

    {% if customer.orders|length > 0 %}
        <div class="orders-warning">
            <strong>‚ö†Ô∏è Notice:</strong> This customer has {{ customer.orders|length }} order(s) in the system. 
            You cannot delete this customer until all orders are removed or reassigned.
        </div>
    {% endif %}

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
        <div class="help-text">Required field</div>
    </div>

    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
        <div class="help-text">Optional</div>
    </div>

    <div class="form-group">
        {{ form_label(form.phone) }}
        {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.phone) }}
        <div class="help-text">Optional</div>
    </div>

    <div class="form-group">
        {{ form_label(form.address) }}
        {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.address) }}
        <div class="help-text">Optional</div>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn btn-primary">üíæ Update Customer</button>
    </div>

    {{ form_end(form) }}

    {# Delete section - outside the form #}
    <div class="form-actions" style="margin-top: 20px; border-top: 2px dashed #e0e0e0; padding-top: 20px;">
        <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="btn btn-secondary">‚Üê Back to Details</a>
        
        {# Both ADMIN and STAFF have full access #}
        {% set canDelete = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
        
        {% if canDelete %}
            <form method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" class="delete-form" id="deleteCustomerForm">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                <button type="button" class="btn btn-danger" id="deleteCustomerButton">üóëÔ∏è Delete Customer</button>
            </form>
        {% endif %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const deleteButton = document.getElementById('deleteCustomerButton');
    const deleteForm = document.getElementById('deleteCustomerForm');
    
    if (deleteButton && deleteForm) {
        deleteButton.addEventListener('click', function(e) {
            e.preventDefault();
            
            const customerId = "{{ customer.id }}";
            const customerName = "{{ customer.name|escape('js') }}";
            const ordersCount = {{ customer.orders|length }};
            
            if (ordersCount > 0) {
                alert(`‚ö†Ô∏è CANNOT DELETE CUSTOMER\n\nCustomer: ${customerName}\n\nThis customer has ${ordersCount} order(s) in the system.\n\nYou must delete or reassign all orders before deleting this customer.`);
                return;
            }
            
            const confirmMessage = `‚ö†Ô∏è WARNING: DELETE CONFIRMATION

Are you ABSOLUTELY SURE you want to delete this customer?

Customer ID: #${customerId}
Customer Name: ${customerName}
Email: {{ customer.email|default('N/A')|escape('js') }}
Phone: {{ customer.phone|default('N/A')|escape('js') }}

‚ö†Ô∏è THIS ACTION CANNOT BE UNDONE!

Click OK to DELETE, or Cancel to keep the customer.`;
            
            if (confirm(confirmMessage)) {
                deleteForm.submit();
            }
        });
    }
});
</script>
{% endblock %}