 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Customer Details{% endblock %}

{% block body %}
<style>
    .customer-detail-container {
        width: 90%;
        max-width: 900px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .customer-detail-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #1D4A23;
    }

    .customer-detail-header h1 {
        color: #1D4A23;
        margin: 0;
        font-size: 28px;
        font-weight: bold;
    }

    .customer-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #1D4A23;
    }

    .info-label {
        font-size: 13px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .info-value {
        font-size: 18px;
        color: #1D4A23;
        font-weight: bold;
        word-break: break-word;
    }

    .orders-section {
        background: #e8f5e9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .orders-section h3 {
        color: #1D4A23;
        margin: 0 0 15px 0;
        font-size: 18px;
    }

    .customer-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .creator-badge {
        display: inline-block;
        padding: 8px 14px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        color: white;
    }

    .creator-admin {
        background-color: #9b59b6;
    }

    .creator-staff {
        background-color: #3498db;
    }

    .delete-form {
        display: inline;
        margin: 0;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeaa7;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="customer-detail-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="customer-detail-header">
        <h1>üë§ {{ customer.name }}</h1>
    </div>

    <div class="customer-info-grid">
        <div class="info-card">
            <div class="info-label">Customer ID</div>
            <div class="info-value">#{{ customer.id }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Customer Name</div>
            <div class="info-value">{{ customer.name }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Email</div>
            <div class="info-value">{{ customer.email ?? 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Phone</div>
            <div class="info-value">{{ customer.phone ?? 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Total Orders</div>
            <div class="info-value">{{ customer.orders|length }} {{ customer.orders|length == 1 ? 'order' : 'orders' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Created Date</div>
            <div class="info-value">{{ customer.createdAt ? customer.createdAt|date('M d, Y') : 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Created Time</div>
            <div class="info-value">{{ customer.createdAt ? customer.createdAt|date('h:i A') : 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Created By</div>
            <div class="info-value">
                {% if customer.createdBy %}
                    <span class="creator-badge {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'creator-admin' : 'creator-staff' }}">
                        {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'üëë Admin' : 'üë§ Staff' }}<br>{{ customer.createdBy.username }}
                    </span>
                {% else %}
                    <span style="color: #999;">Unknown</span>
                {% endif %}
            </div>
        </div>
    </div>

    {% if customer.address %}
    <div class="orders-section">
        <h3>üìç Address</h3>
        <p style="margin: 0; color: #333;">{{ customer.address }}</p>
    </div>
    {% endif %}

    {% if customer.orders|length > 0 %}
    <div class="orders-section">
        <h3>üì¶ Orders ({{ customer.orders|length }})</h3>
        <p style="margin: 0; color: #666;">This customer has {{ customer.orders|length }} order(s) in the system.</p>
    </div>
    {% endif %}

    <div class="customer-actions">
        <a href="{{ path('app_customer_index') }}" class="btn btn-secondary">‚Üê Back to Customers</a>
        
        {# Both ADMIN and STAFF have full access #}
        {% set canEdit = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
        
        {% if canEdit %}
            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-warning">‚úèÔ∏è Edit Customer</a>
            <form method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" class="delete-form" id="deleteCustomerForm">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                <button type="button" class="btn btn-danger" id="deleteCustomerButton">üóëÔ∏è Delete Customer</button>
            </form>
        {% endif %}
    </div>

    {% if not canEdit %}
        <div class="alert alert-warning">
            üîí <strong>Permission Notice:</strong> You need staff or admin privileges to edit or delete customers.
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const deleteButton = document.getElementById('deleteCustomerButton');
    const deleteForm = document.getElementById('deleteCustomerForm');
    
    if (deleteButton && deleteForm) {
        deleteButton.addEventListener('click', function(e) {
            e.preventDefault();
            
            const customerId = "{{ customer.id }}";
            const customerName = "{{ customer.name|escape('js') }}";
            const ordersCount = {{ customer.orders|length }};
            
            if (ordersCount > 0) {
                alert(`‚ö†Ô∏è CANNOT DELETE CUSTOMER\n\nCustomer: ${customerName}\n\nThis customer has ${ordersCount} order(s) in the system.\n\nYou must delete or reassign all orders before deleting this customer.`);
                return;
            }
            
            const confirmMessage = `‚ö†Ô∏è WARNING: DELETE CONFIRMATION

Are you ABSOLUTELY SURE you want to delete this customer?

Customer ID: #${customerId}
Customer Name: ${customerName}

‚ö†Ô∏è THIS ACTION CANNOT BE UNDONE!

Click OK to DELETE, or Cancel to keep the customer.`;
            
            if (confirm(confirmMessage)) {
                deleteForm.submit();
            }
        });
    }
});
</script>
{% endblock %}