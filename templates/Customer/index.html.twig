{% extends 'dashboard/layout.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
<style>
    body {
        background-color: #fff;
        font-family: Arial, sans-serif;
    }

    .customer-container {
        width: 90%;
        max-width: 1400px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .customer-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .customer-header-left h2 {
        color: #1D4A23;
        margin: 0 0 10px 0;
        font-size: 26px;
        font-weight: bold;
    }

    .customer-header-left p {
        color: #555;
        margin: 0;
        font-size: 15px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
        margin: 0 3px;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-locked {
        background-color: #bdc3c7;
        color: #666;
        opacity: 0.6;
        cursor: not-allowed;
    }

    table {
        width: 100% !important;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #1D4A23;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        font-size: 15px;
        border-bottom: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #f4f9ef;
        transition: 0.2s ease-in-out;
    }

    .creator-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        color: white;
    }

    .creator-admin {
        background-color: #9b59b6;
    }

    .creator-staff {
        background-color: #3498db;
    }

    .delete-form {
        display: inline;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .orders-count {
        display: inline-block;
        background-color: #e8f5e9;
        color: #1D4A23;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 13px;
    }
</style>

<div class="customer-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="customer-header">
        <div class="customer-header-left">
            <h2>üë• Customers</h2>
            <p>Manage customer information here.</p>
        </div>
        <div class="customer-header-right">
            <a href="{{ path('app_customer_new') }}" class="btn btn-primary">+ Add New Customer</a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="customersTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Orders</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if customers is defined and customers|length > 0 %}
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.id }}</td>
                            <td><strong>{{ customer.name }}</strong></td>
                            <td>{{ customer.email ?? '‚Äî' }}</td>
                            <td>{{ customer.phone ?? '‚Äî' }}</td>
                            <td>
                                <span class="orders-count">{{ customer.orders|length }} {{ customer.orders|length == 1 ? 'order' : 'orders' }}</span>
                            </td>
                            <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
                            <td>
                                {% if customer.createdBy %}
                                    <span class="creator-badge {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'creator-admin' : 'creator-staff' }}">
                                        {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'üëë' : 'üë§' }} {{ customer.createdBy.username }}
                                    </span>
                                {% else %}
                                    <span style="color: #999;">Unknown</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="btn btn-sm btn-info" title="View">üëÅÔ∏è View</a>
                                
                                {% set canEdit = is_granted('ROLE_ADMIN') or (customer.createdBy and customer.createdBy.id == app.user.id) %}
                                
                                {% if canEdit %}
                                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-sm btn-warning" title="Edit">‚úèÔ∏è Edit</a>
                                    <form method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" class="delete-form" id="deleteForm{{ customer.id }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                        <button type="button" class="btn btn-sm btn-danger deleteBtn" 
                                                data-id="{{ customer.id }}" 
                                                data-name="{{ customer.name|escape('html_attr') }}" 
                                                data-orders="{{ customer.orders|length }}" 
                                                title="Delete">üóëÔ∏è Delete</button>
                                    </form>
                                {% else %}
                                    <span class="btn btn-sm btn-locked" title="You can only edit/delete your own records">üîí Locked</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#customersTable').DataTable({
        "order": [[0, "desc"]],
        "pageLength": 10,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
        "language": {
            "search": "üîç Search:",
            "lengthMenu": "Show _MENU_ entries",
            "info": "Showing _START_ to _END_ of _TOTAL_ customers",
            "infoEmpty": "No customers available",
            "emptyTable": "No customers found. Create your first customer!",
            "zeroRecords": "No matching customers found"
        },
        "columnDefs": [
            { "orderable": false, "targets": [7] }
        ]
    });

    // Delete confirmation
    $('.deleteBtn').on('click', function() {
        const customerId = $(this).data('id');
        const customerName = $(this).data('name');
        const ordersCount = $(this).data('orders');
        
        let message = `‚ö†Ô∏è WARNING: DELETE CONFIRMATION\n\nAre you sure you want to delete this customer?\n\nCustomer: ${customerName}`;
        
        if (ordersCount > 0) {
            message += `\n\n‚ö†Ô∏è This customer has ${ordersCount} order(s)!\nYou cannot delete a customer with existing orders.`;
            alert(message);
            return;
        }
        
        message += '\n\n‚ö†Ô∏è THIS ACTION CANNOT BE UNDONE!\n\nClick OK to DELETE, or Cancel to keep the customer.';
        
        if (confirm(message)) {
            $(`#deleteForm${customerId}`).submit();
        }
    });
});
</script>
{% endblock %}