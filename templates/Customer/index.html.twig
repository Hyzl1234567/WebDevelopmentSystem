 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Customers{% endblock %}

{% block body %}
<style>
    body {
        background-color: #fff;
        font-family: Arial, sans-serif;
    }

    .customer-container {
        width: 90%;
        max-width: 1400px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .customer-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .customer-header-left h2 {
        color: #1D4A23;
        margin: 0 0 10px 0;
        font-size: 26px;
        font-weight: bold;
    }

    .customer-header-left p {
        color: #555;
        margin: 0;
        font-size: 15px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
        margin: 0 3px;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-locked {
        background-color: #bdc3c7;
        color: #666;
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* DataTable wrapper styling */
    .dataTables_wrapper {
        padding: 20px 0;
    }

    /* DataTable search box */
    .dataTables_filter input {
        border: 2px solid #1D4A23;
        border-radius: 6px;
        padding: 6px 12px;
        margin-left: 8px;
    }

    /* DataTable length selector */
    .dataTables_length select {
        border: 2px solid #1D4A23;
        border-radius: 6px;
        padding: 4px 8px;
        margin: 0 8px;
    }

    /* DataTable pagination */
    .dataTables_paginate .paginate_button {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 6px;
        border: 1px solid #1D4A23;
        background: white;
        color: #1D4A23 !important;
    }

    .dataTables_paginate .paginate_button:hover {
        background: #1D4A23 !important;
        color: white !important;
        border: 1px solid #1D4A23;
    }

    .dataTables_paginate .paginate_button.current {
        background: #1D4A23 !important;
        color: white !important;
        border: 1px solid #1D4A23;
    }

    .dataTables_paginate .paginate_button.disabled {
        color: #ccc !important;
    }

    /* DataTable info text */
    .dataTables_info {
        color: #666;
        font-size: 14px;
    }

    table {
        width: 100% !important;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #1D4A23;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        font-size: 15px;
        border-bottom: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #f4f9ef;
        transition: 0.2s ease-in-out;
    }

    .creator-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        color: white;
    }

    .creator-admin {
        background-color: #9b59b6;
    }

    .creator-staff {
        background-color: #3498db;
    }

    .actions-cell {
        white-space: nowrap;
    }

    .delete-form {
        display: inline;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .orders-count {
        display: inline-block;
        background-color: #e8f5e9;
        color: #1D4A23;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 13px;
    }

    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: bold;
    }

    .bg-secondary {
        background-color: #bdc3c7;
        color: white;
    }

    /* Center no records message */
    td.dataTables_empty {
        text-align: center;
        color: #777;
        font-style: italic;
        padding: 30px !important;
    }

    .no-customers {
        text-align: center;
        color: #555;
        padding: 40px 20px;
        font-size: 15px;
    }
</style>

<div class="customer-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="customer-header">
        <div class="customer-header-left">
            <h2>üë• Customers</h2>
            <p>Manage customer information here.</p>
        </div>
        <div class="customer-header-right">
            <a href="{{ path('app_customer_new') }}" class="btn btn-primary">+ Add New Customer</a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="customersTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Orders</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if customers is defined and customers|length > 0 %}
                    {% for customer in customers %}
                        <tr>
                            <td>{{ customer.id }}</td>
                            <td><strong>{{ customer.name }}</strong></td>
                            <td>{{ customer.email ?? '‚Äî' }}</td>
                            <td>{{ customer.phone ?? '‚Äî' }}</td>
                            <td>
                                <span class="orders-count">{{ customer.orders|length }} {{ customer.orders|length == 1 ? 'order' : 'orders' }}</span>
                            </td>
                            <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
                            <td>
                                {% if customer.createdBy %}
                                    <span class="creator-badge {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'creator-admin' : 'creator-staff' }}">
                                        {{ 'ROLE_ADMIN' in customer.createdBy.roles ? 'üëë' : 'üë§' }} {{ customer.createdBy.username }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td class="actions-cell">
                                <a href="{{ path('app_customer_show', {'id': customer.id}) }}" class="btn btn-sm btn-info" title="View">üëÅÔ∏è View</a>
                                
                                {# Give full access to both ADMIN and STAFF #}
                                {% set canEdit = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
                                
                                {% if canEdit %}
                                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}" class="btn btn-sm btn-warning" title="Edit">‚úèÔ∏è Edit</a>
                                    <form method="post" action="{{ path('app_customer_delete', {'id': customer.id}) }}" class="delete-form" id="deleteForm{{ customer.id }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ customer.id) }}">
                                        <button type="button" class="btn btn-sm btn-danger deleteBtn" 
                                                data-id="{{ customer.id }}" 
                                                data-name="{{ customer.name|escape('html_attr') }}" 
                                                data-orders="{{ customer.orders|length }}" 
                                                title="Delete">üóëÔ∏è Delete</button>
                                    </form>
                                {% else %}
                                    <span class="btn btn-sm btn-locked" title="You need staff or admin privileges">üîí Locked</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="8" class="no-customers">
                            <p>No customers found.</p>
                            <a href="{{ path('app_customer_new') }}" class="btn btn-primary" style="margin-top: 15px;">Add Your First Customer</a>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    // Initialize DataTable
    $('#customersTable').DataTable({
        "order": [[0, "desc"]], // Sort by Customer ID descending (newest first)
        "pageLength": 10,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
        "language": {
            "search": "üîç Search:",
            "lengthMenu": "Show _MENU_ entries",
            "info": "Showing _START_ to _END_ of _TOTAL_ customers",
            "infoEmpty": "No customers available",
            "infoFiltered": "(filtered from _MAX_ total customers)",
            "zeroRecords": "No matching customers found",
            "emptyTable": "No customers found. Add your first customer!",
            "paginate": {
                "first": "First",
                "last": "Last",
                "next": "Next",
                "previous": "Previous"
            }
        },
        "columnDefs": [
            { 
                "orderable": false, 
                "targets": [7] // Disable sorting on Actions column
            },
            {
                "type": "num",
                "targets": [0, 4] // ID and Orders columns - for proper numeric sorting
            }
        ]
    });

    // Delete confirmation with order count validation
    $(document).on('click', '.deleteBtn', function() {
        const customerId = $(this).data('id');
        const customerName = $(this).data('name');
        const ordersCount = $(this).data('orders');
        
        let message = `‚ö†Ô∏è WARNING: DELETE CONFIRMATION\n\nAre you sure you want to delete this customer?\n\nCustomer: ${customerName}`;
        
        if (ordersCount > 0) {
            message += `\n\n‚ö†Ô∏è This customer has ${ordersCount} order(s)!\nYou cannot delete a customer with existing orders.`;
            alert(message);
            return;
        }
        
        message += '\n\n‚ö†Ô∏è THIS ACTION CANNOT BE UNDONE!\n\nClick OK to DELETE, or Cancel to keep the customer.';
        
        if (confirm(message)) {
            $(`#deleteForm${customerId}`).submit();
        }
    });
});
</script>
{% endblock %}