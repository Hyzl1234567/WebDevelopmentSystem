 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Stock index{% endblock %}

{% block body %}
<style>
    .content-wrapper {
        background-color: #fdfdf9; /* soft cream-white background */
        border-radius: 12px;
        padding: 30px;
        width: 90%;
        margin: 30px auto;
        box-shadow: 0 4px 10px rgba(0,0,0,1);
    }

    h1 {
        text-align: center;
        color: #1f4e25;
        font-family: 'Poppins', sans-serif;
        font-size: 2rem;
        margin-bottom: 25px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .table thead {
        background-color: #234d20;
        color: #fff;
        font-weight: 600;
    }

    .table th, .table td {
        padding: 14px 16px;
        border-bottom: 1px solid #ddd;
        text-align: left;
        vertical-align: middle;
    }

    .table img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .table:hover {
        background-color: #f4f4f4;
        transition: background 0.3s ease;
    }

    a {
        text-decoration: none;
        color: #2d572c;
        font-weight: 600;
        margin-right: 10px;
        transition: color 0.3s ease;
    }

    a:hover {
        color: #99CC67;
    }

    a[href*="new"] {
        display: inline-block;
        background-color: #234d20;
        color: #fff;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        margin: 25px auto 0;
        display: block;
        width: fit-content;
        transition: background 0.3s ease;
    }

    a[href*="new"]:hover {
        background-color: #2e6b2e;
    }

    .table td[colspan] {
        text-align: center;
        color: #777;
        font-style: italic;
    }
</style>

<div class="content-wrapper">
    <h1>Stock index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Last Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.product ? stock.product.name : 'â€”' }}</td>
                <td>
                    {% if stock.product and stock.product.image %}
                        <img src="{{ asset('uploads/images/' ~ stock.product.image) }}" alt="{{ stock.product.name }}">
                    {% else %}
                        <em>No image</em>
                    {% endif %}
                </td>
                <td>{{ stock.quantity }}</td>
                <td>{{ stock.lastUpdated ? stock.lastUpdated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_stock_show', {'id': stock.id}) }}">show</a>
                    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_stock_new') }}">Create new</a>
</div>
{% endblock %}
