 {% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
<style>
    body {
        background: #99CC67;
        font-family: 'Arial', sans-serif;
    }

    .stock-show-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        max-width: 900px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.8);
        overflow: hidden;
    }

    /* Left column - Product image */
    .stock-left {
        background: #fdf5e6;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .stock-left img {
        max-width: 100%;
        max-height: 400px;
        border-radius: 8px;
    }

    /* Right column - Stock details */
    .stock-right {
        padding: 30px;
        text-align: left;
    }

    .stock-right h2 {
        font-size: 1.8rem;
        color: #1f4e25;
        margin-bottom: 15px;
    }

    .stock-details p {
        margin: 10px 0;
        font-size: 1rem;
        color: #333;
    }

    .stock-details strong {
        color: #1f4e25;
        min-width: 140px;
        display: inline-block;
    }

    /* Badge styling */
    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: bold;
        color: white;
    }

    .badge-admin {
        background-color: #9b59b6;
    }

    .badge-staff {
        background-color: #3498db;
    }

    .badge-unknown {
        background-color: #95a5a6;
    }

    .product-name {
        font-size: 1.2rem;
        font-weight: bold;
        color: #234d20;
        margin-bottom: 10px;
    }

    .product-info {
        font-size: 0.95rem;
        color: #333;
    }

    /* Buttons */
    .stock-actions {
        margin-top: 25px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .stock-actions .btn {
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: 0.3s;
    }

    .back-btn {
        background: #f5f5f5;
        color: #000;
    }

    .back-btn:hover {
        background: #6F4E37;
        color: white;
    }

    .edit-btn {
        background: #e8f5e9;
        color: #000;
    }

    .edit-btn:hover {
        background: #1D4A23;
        color: white;
    }

    form button.btn {
        background: #f8d7da;
        color: #000;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    form button.btn:hover {
        background: #c9302c;
        color: #fff;
        transform: scale(1.05);
        box-shadow: 0 4px 10px rgba(201, 48, 44, 0.4);
    }

    .warning-message {
        padding: 15px;
        background-color: #fff3cd;
        border-radius: 8px;
        color: #856404;
        font-size: 14px;
        margin-top: 15px;
        text-align: center;
    }

    .delete-form {
        display: inline;
        margin: 0;
    }
</style>

<div class="stock-show-container">
    <div class="stock-left">
        {% if stock.product and stock.product.image %}
            <img src="{{ asset('uploads/images/' ~ stock.product.image) }}" alt="{{ stock.product.name }}">
        {% else %}
            <div style="color: #999;">No image available</div>
        {% endif %}
    </div>

    <div class="stock-right">
        <h2>üì¶ Stock Information</h2>

        <div class="stock-details">
            <p><strong>Stock ID:</strong> #{{ stock.id }}</p>
            <p><strong>Product Name:</strong> {{ stock.product ? stock.product.name : 'Unknown' }}</p>
            <p><strong>Quantity:</strong> <span style="font-size: 1.3rem; color: #234d20; font-weight: bold;">{{ stock.quantity }}</span></p>
            <p><strong>Last Updated:</strong> {{ stock.lastUpdated ? stock.lastUpdated|date('F d, Y - H:i:s') : '‚Äî' }}</p>
            <p><strong>Created At:</strong> {{ stock.createdAt ? stock.createdAt|date('F d, Y - H:i:s') : '‚Äî' }}</p>
            <p>
                <strong>Created By:</strong>
                {% if stock.createdBy %}
                    <span class="badge {{ 'ROLE_ADMIN' in stock.createdBy.roles ? 'badge-admin' : 'badge-staff' }}">
                        {{ 'ROLE_ADMIN' in stock.createdBy.roles ? 'üëë Admin' : 'üë§ Staff' }} - {{ stock.createdBy.username }}
                    </span>
                {% else %}
                    <span class="badge badge-unknown">Unknown</span>
                {% endif %}
            </p>
        </div>

        <div class="stock-actions">
            <a href="{{ path('app_stock_index') }}" class="btn back-btn">‚¨Ö Back</a>
            
            {% set canEdit = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
            
            {% if canEdit %}
                <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn edit-btn">‚úè Edit</a>
                <form method="post" action="{{ path('app_stock_delete', {'id': stock.id}) }}" class="delete-form"
                      onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete this stock record?\n\nProduct: {{ stock.product ? stock.product.name : 'Unknown' }}\nQuantity: {{ stock.quantity }}\n\nThis action cannot be undone!');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
                    <button type="submit" class="btn">üóëÔ∏è Delete</button>
                </form>
            {% endif %}
        </div>

        {% if not canEdit %}
            <div class="warning-message">
                üîí You can only edit or delete your own records. This stock was created by 
                {% if stock.createdBy %}
                    <strong>{{ stock.createdBy.username }}</strong>
                {% else %}
                    <strong>another user</strong>
                {% endif %}.
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}