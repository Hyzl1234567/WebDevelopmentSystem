 {% extends 'base.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
<style>
    body {
        background-color: #99CC67;
        font-family: 'Poppins', sans-serif;
    }

    .form-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        width: 600px;
        margin: 80px auto;
        padding: 50px;
        text-align: center;
    }

    h1 {
        text-align: center;
        color: #1D4A23;
        margin-bottom: 25px;
        font-size: 24px;
        font-weight: bold;
    }

    label {
        display: block;
        text-align: left;
        color: #2e5d24;
        font-weight: bold;
        margin-top: 15px;
        margin-bottom: 8px;
    }

    input[type="text"], textarea {
        width: 100%;
        padding: 14px;
        border: 2px solid #a3d18b;
        border-radius: 10px;
        margin-bottom: 20px;
        outline: none;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    input[type="text"]:focus, textarea:focus {
        border-color: #6fa84f;
        box-shadow: 0 0 8px #6fa84f;
    }

    .button-group {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-top: 15px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        font-weight: bold;
        font-size: 15px;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        transition: 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }

    .btn-update {
        background-color: #2e5d24;
    }

    .btn-back {
        background-color: #2e5d24;
    }

    .btn-delete {
        background-color: #2e5d24;
    }
</style>

<div class="form-container">
    <h1>Edit Category</h1>

    {# UPDATE FORM #}
    {{ form_start(form, {'attr': {'id': 'update-form'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        <div class="button-group">
            <a href="{{ path('app_category_index') }}" class="btn btn-back"><- Back</a>
            <button type="submit" class="btn btn-update">Update</button>
        </div>
    {{ form_end(form) }}

    {# DELETE FORM (SEPARATE) #}
    <div class="button-group" style="margin-top: 10px;">
        <form method="post"
              action="{{ path('app_category_delete', {'id': category.id}) }}"
              onsubmit="return confirm('Are you sure you want to delete this category?');"
              style="display:inline; margin:0;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
            <button type="submit" class="btn btn-delete">Delete</button>
        </form>
    </div>
</div>
{% endblock %}
