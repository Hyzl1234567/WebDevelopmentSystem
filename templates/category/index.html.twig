 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<style>
/* === Category Page Styling === */

/* Page title */
h1 {
    color: #2d4d22;
    font-family: 'Poppins', sans-serif;
    font-size: 28px;
    margin-bottom: 25px;
    text-align: center;
}

/* Flash messages */
.alert {
    padding: 12px 20px;
    border-radius: 8px;
    margin-bottom: 20px;
    font-size: 14px;
}

.alert-success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
}

.alert-error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
}

/* DataTable wrapper styling */
.dataTables_wrapper {
    padding: 20px 0;
}

/* DataTable search box */
.dataTables_filter input {
    border: 2px solid #2d4d22;
    border-radius: 6px;
    padding: 6px 12px;
    margin-left: 8px;
}

/* DataTable length selector */
.dataTables_length select {
    border: 2px solid #2d4d22;
    border-radius: 6px;
    padding: 4px 8px;
    margin: 0 8px;
}

/* DataTable pagination */
.dataTables_paginate .paginate_button {
    padding: 6px 12px;
    margin: 0 2px;
    border-radius: 6px;
    border: 1px solid #2d4d22;
    background: white;
    color: #2d4d22 !important;
}

.dataTables_paginate .paginate_button:hover {
    background: #2d4d22 !important;
    color: white !important;
    border: 1px solid #2d4d22;
}

.dataTables_paginate .paginate_button.current {
    background: #2d4d22 !important;
    color: white !important;
    border: 1px solid #2d4d22;
}

.dataTables_paginate .paginate_button.disabled {
    color: #ccc !important;
}

/* DataTable info text */
.dataTables_info {
    color: #666;
    font-size: 14px;
}

/* Table container */
.table {
    width: 100% !important;
    border-collapse: collapse;
    background-color: #f9fff6;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,1);
}

/* Table headers */
.table thead {
    background-color: #2d4d22;
    color: white;
}

.table th {
    text-align: left;
    padding: 14px;
    font-size: 16px;
    letter-spacing: 0.5px;
}

/* Table rows */
.table td {
    padding: 12px;
    border-bottom: 1px solid #ddd;
    color: #333;
    font-size: 15px;
}

.table tbody tr:hover {
    background-color: #eef7e6;
    transition: 0.2s;
}

/* Buttons */
.table a, .table button {
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 14px;
    margin-right: 5px;
    font-weight: 500;
    transition: background-color 0.2s ease;
    border: none;
    cursor: pointer;
}

.btn-show {
    background-color: #1D4A23;
    color: white;
}

.btn-show:hover {
    background-color: #2f6b35;
}

.btn-edit {
    background-color: #99CC67;
    color: #1D4A23;
}

.btn-edit:hover {
    background-color: #b6df8a;
}

.btn-delete {
    background-color: #6F4E37;
    color: white;
}

.btn-delete:hover {
    background-color: #8b6348;
}

.btn-locked {
    background-color: #bdc3c7;
    color: #7f8c8d;
    opacity: 0.6;
    cursor: not-allowed;
}

/* Badge for Created By */
.badge {
    display: inline-block;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 12px;
    font-weight: bold;
    color: white;
}

.badge-admin {
    background-color: #9b59b6;
}

.badge-staff {
    background-color: #3498db;
}

.badge-unknown {
    background-color: #95a5a6;
}

/* Create New Button */
.create-new-btn {
    display: inline-block;
    background-color: #99CC67;
    color: #1D4A23;
    padding: 10px 16px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    margin-top: 20px;
    transition: background-color 0.2s ease;
}

.create-new-btn:hover {
    background-color: #b6df8a;
}

/* Empty table message */
.table td[colspan] {
    text-align: center;
    color: #666;
    font-style: italic;
}

/* Center no records message */
td.dataTables_empty {
    text-align: center;
    color: #777;
    font-style: italic;
    padding: 30px !important;
}

.delete-form {
    display: inline;
    margin: 0;
}
</style>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="alert alert-error">{{ message }}</div>
{% endfor %}

<h1>‚òòÔ∏è Category List ‚òòÔ∏è</h1>

<table id="categoriesTable" class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Products Count</th>
            <th>Created At</th>
            <th>Created By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>{{ category.description }}</td>
            <td><strong>{{ category.products|length }}</strong></td>
            <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
            <td>
                {% if category.createdBy %}
                    <span class="badge {{ 'ROLE_ADMIN' in category.createdBy.roles ? 'badge-admin' : 'badge-staff' }}">
                        {{ 'ROLE_ADMIN' in category.createdBy.roles ? 'üëë ' : 'üë§ ' }}{{ category.createdBy.username }}
                    </span>
                {% else %}
                    <span class="badge badge-unknown">Unknown</span>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn-show">üëÅÔ∏è Show</a>
                
                {# Both ADMIN and STAFF have full access #}
                {% set canEdit = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
                
                {% if canEdit %}
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-edit">‚úèÔ∏è Edit</a>
                    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" class="delete-form" 
                          onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete this category?\n\nCategory: {{ category.name }}\n\nThis action cannot be undone!');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                        <button type="submit" class="btn-delete">üóëÔ∏è Delete</button>
                    </form>
                {% else %}
                    <span class="btn-locked" title="You need staff or admin privileges">üîí Locked</span>
                {% endif %}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">No records found üåø</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_category_new') }}" class="create-new-btn">‚ûï Create new</a>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    $('#categoriesTable').DataTable({
        "order": [[0, "desc"]], // Sort by ID descending (newest first)
        "pageLength": 10,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
        "language": {
            "search": "üîç Search:",
            "lengthMenu": "Show _MENU_ entries",
            "info": "Showing _START_ to _END_ of _TOTAL_ categories",
            "infoEmpty": "No categories available",
            "infoFiltered": "(filtered from _MAX_ total categories)",
            "zeroRecords": "No matching categories found",
            "emptyTable": "No categories available in table üåø",
            "paginate": {
                "first": "First",
                "last": "Last",
                "next": "Next",
                "previous": "Previous"
            }
        },
        "columnDefs": [
            { 
                "orderable": false, 
                "targets": [6] // Disable sorting on Actions column
            },
            {
                "type": "num",
                "targets": [3] // Products Count column - for proper numeric sorting
            }
        ]
    });
});
</script>
{% endblock %}