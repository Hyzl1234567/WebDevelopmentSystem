 {% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}

<style>
    body {
        background-color: #99CC67;
        font-family: Arial, sans-serif;
    }

    /* Card container */
    .details-container {
        width: 600px;
        margin: 60px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 1);
        font-family: Arial, sans-serif;
    }

    .details-container h2 {
        text-align: center;
        color: #1D4A23;
        margin-bottom: 20px;
        font-size: 22px;
        font-weight: bold;
    }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    th, td {
        text-align: left;
        padding: 10px;
        border-bottom: 1px solid #99CC67;
    }

    th {
        width: 35%;
        color: #1D4A23;
        font-weight: bold;
    }

    td {
        color: #333;
    }

    /* Badge styling */
    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: bold;
        color: white;
    }

    .badge-admin {
        background-color: #9b59b6;
    }

    .badge-staff {
        background-color: #3498db;
    }

    .badge-unknown {
        background-color: #95a5a6;
    }

    /* Button container */
    .button-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 10px;
    }

    /* Buttons */
    .back-btn, .edit-btn, .delete-btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        border: none;
        cursor: pointer;
    }

    .back-btn {
        background: #99CC67;
        color: black;
    }

    .back-btn:hover {
        background: #6F4E37;
        color: white;
    }

    .edit-btn {
        background: #1D4A23;
        color: white;
    }

    .edit-btn:hover {
        background: #99CC67;
        color: black;
    }

    .delete-btn {
        background: #6F4E37;
        color: white;
    }

    .delete-btn:hover {
        background: #1D4A23;
        color: white;
    }

    .warning-message {
        padding: 15px;
        background-color: #fff3cd;
        border-radius: 8px;
        color: #856404;
        font-size: 14px;
        margin-top: 15px;
        text-align: center;
    }

    .delete-form {
        display: inline;
        margin: 0;
    }
</style>

<div class="details-container">
    <h2>‚òòÔ∏è Category Details</h2>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ category.createdAt ? category.createdAt|date('F d, Y - H:i:s') : '‚Äî' }}</td>
            </tr>
            <tr>
                <th>Created By</th>
                <td>
                    {% if category.createdBy %}
                        <span class="badge {{ 'ROLE_ADMIN' in category.createdBy.roles ? 'badge-admin' : 'badge-staff' }}">
                            {{ 'ROLE_ADMIN' in category.createdBy.roles ? 'üëë Admin' : 'üë§ Staff' }} - {{ category.createdBy.username }}
                        </span>
                    {% else %}
                        <span class="badge badge-unknown">Unknown</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('app_category_index') }}" class="back-btn">‚Üê Back to List</a>
        
        {% set canEdit = is_granted('ROLE_ADMIN') or (category.createdBy and category.createdBy.id == app.user.id) %}
        
        {% if canEdit %}
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="edit-btn">‚úèÔ∏è Edit</a>
            <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" class="delete-form"
                  onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete this category?\n\nCategory: {{ category.name }}\n\nThis action cannot be undone!');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
            </form>
        {% endif %}
    </div>

    {% if not canEdit %}
        <div class="warning-message">
            üîí You can only edit or delete your own records. This category was created by 
            {% if category.createdBy %}
                <strong>{{ category.createdBy.username }}</strong>
            {% else %}
                <strong>another user</strong>
            {% endif %}.
        </div>
    {% endif %}
</div>

{% endblock %}