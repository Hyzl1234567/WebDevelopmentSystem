 {% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}

<style>
    body {
        background-color: #99CC67; 
        font-family: Arial, sans-serif;
    }

    /* Card container */
    .details-container {
        width: 600px;
        margin: 60px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 1);
        font-family: Arial, sans-serif;
    }

    .details-container h2 {
        text-align: center;
        color: #1D4A23;
        margin-bottom: 20px;
        font-size: 22px;
        font-weight: bold;
    }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    th, td {
        text-align: left;
        padding: 10px;
        border-bottom: 1px solid #99CC67;
    }

    th {
        width: 35%;
        color: #1D4A23;
        font-weight: bold;
    }

    td {
        color: #333;
    }

    /* Button container */
    .button-group {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* Buttons */
    .back-btn, .edit-btn, .delete-btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        border: none;
        cursor: pointer;
    }

    .back-btn {
        background: #99CC67;
        color: black;
    }

    .back-btn:hover {
        background: #6F4E37;
        color: white;
    }

    .edit-btn {
        background: #1D4A23;
        color: white;
    }

    .edit-btn:hover {
        background: #99CC67;
        color: black;
    }

    .delete-btn {
        background: #6F4E37;
        color: white;
    }

    .delete-btn:hover {
        background: #1D4A23;
        color: white;
    }

</style>

<div class="details-container">
    <h2>Category Details</h2>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="button-group">
        <a href="{{ path('app_category_index') }}" class="back-btn">Back to List</a>
        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="edit-btn">Edit</a>
        {{ include('category/_delete_form.html.twig', { 'button_label': 'Delete', 'attr': {'class': 'delete-btn'} }) }}
    </div>
</div>

{% endblock %}
