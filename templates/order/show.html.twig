 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Order Details{% endblock %}

{% block body %}
<style>
    .order-detail-container {
        width: 90%;
        max-width: 900px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .order-detail-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #1D4A23;
    }

    .order-detail-header h1 {
        color: #1D4A23;
        margin: 0;
        font-size: 28px;
        font-weight: bold;
    }

    .order-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
    }

    .order-badge.pending {
        background-color: #FFD700;
        color: #333;
    }

    .order-badge.completed {
        background-color: #99CC67;
        color: #1D4A23;
    }

    .order-badge.cancelled {
        background-color: #E74C3C;
        color: white;
    }

    .order-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .info-card {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        border-left: 4px solid #1D4A23;
    }

    .info-label {
        font-size: 13px;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
        font-weight: 600;
    }

    .info-value {
        font-size: 18px;
        color: #1D4A23;
        font-weight: bold;
    }

    .order-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #ddd;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-2px);
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .delete-form {
        display: inline;
    }

    .product-details {
        background: #e8f5e9;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .product-details h3 {
        color: #1D4A23;
        margin: 0 0 15px 0;
        font-size: 18px;
    }

    .product-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-name {
        font-size: 16px;
        font-weight: 600;
        color: #333;
    }

    .product-price {
        font-size: 20px;
        font-weight: bold;
        color: #1D4A23;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
</style>

<div class="order-detail-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="order-detail-header">
        <h1>üì¶ Order #{{ order.id }}</h1>
        <span class="order-badge {{ order.status|lower }}">{{ order.status }}</span>
    </div>

    <!-- Product Details -->
    {% if order.product %}
    <div class="product-details">
        <h3>üì¶ Product Information</h3>
        <div class="product-info">
            <span class="product-name">{{ order.product.name }}</span>
            <span class="product-price">‚Ç±{{ order.totalPrice|number_format(2) }}</span>
        </div>
    </div>
    {% endif %}

    <!-- Order Information Grid -->
    <div class="order-info-grid">
        <div class="info-card">
            <div class="info-label">Order ID</div>
            <div class="info-value">#{{ order.id }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Customer Name</div>
            <div class="info-value">{{ order.customer }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Total Price</div>
            <div class="info-value">‚Ç±{{ order.totalPrice|number_format(2) }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Order Status</div>
            <div class="info-value">{{ order.status }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Order Date</div>
            <div class="info-value">{{ order.createdAt ? order.createdAt|date('M d, Y') : 'N/A' }}</div>
        </div>

        <div class="info-card">
            <div class="info-label">Order Time</div>
            <div class="info-value">{{ order.createdAt ? order.createdAt|date('h:i A') : 'N/A' }}</div>
        </div>
    </div>

    <!-- Actions -->
    <div class="order-actions">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">
            ‚Üê Back to Orders
        </a>
        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-warning">
            ‚úèÔ∏è Edit Order
        </a>
        <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this order?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
            <button type="submit" class="btn btn-danger">üóëÔ∏è Delete Order</button>
        </form>
    </div>
</div>
{% endblock %}