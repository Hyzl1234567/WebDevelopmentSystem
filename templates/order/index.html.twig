 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
<style>
    body {
        background-color: #fff;
        font-family: Arial, sans-serif;
    }

    .order-container {
        width: 90%;
        max-width: 1400px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .order-header-left h2 {
        color: #1D4A23;
        margin: 0 0 10px 0;
        font-size: 26px;
        font-weight: bold;
    }

    .order-header-left p {
        color: #555;
        margin: 0;
        font-size: 15px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
        margin: 0 3px;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    .btn-locked {
        background-color: #bdc3c7;
        color: #666;
        opacity: 0.6;
        cursor: not-allowed;
    }

    /* DataTable wrapper styling */
    .dataTables_wrapper {
        padding: 20px 0;
    }

    /* DataTable search box */
    .dataTables_filter input {
        border: 2px solid #1D4A23;
        border-radius: 6px;
        padding: 6px 12px;
        margin-left: 8px;
    }

    /* DataTable length selector */
    .dataTables_length select {
        border: 2px solid #1D4A23;
        border-radius: 6px;
        padding: 4px 8px;
        margin: 0 8px;
    }

    /* DataTable pagination */
    .dataTables_paginate .paginate_button {
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 6px;
        border: 1px solid #1D4A23;
        background: white;
        color: #1D4A23 !important;
    }

    .dataTables_paginate .paginate_button:hover {
        background: #1D4A23 !important;
        color: white !important;
        border: 1px solid #1D4A23;
    }

    .dataTables_paginate .paginate_button.current {
        background: #1D4A23 !important;
        color: white !important;
        border: 1px solid #1D4A23;
    }

    .dataTables_paginate .paginate_button.disabled {
        color: #ccc !important;
    }

    /* DataTable info text */
    .dataTables_info {
        color: #666;
        font-size: 14px;
    }

    table {
        width: 100% !important;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #1D4A23;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        font-size: 15px;
        border-bottom: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #f4f9ef;
        transition: 0.2s ease-in-out;
    }

    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: bold;
    }

    .bg-warning {
        background-color: #FFD700;
        color: #333;
    }

    .bg-info {
        background-color: #3498db;
        color: white;
    }

    .bg-success {
        background-color: #99CC67;
        color: #1D4A23;
    }

    .bg-danger {
        background-color: #E74C3C;
        color: white;
    }

    .bg-secondary {
        background-color: #bdc3c7;
        color: white;
    }

    .creator-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        color: white;
    }

    .creator-admin {
        background-color: #9b59b6;
    }

    .creator-staff {
        background-color: #3498db;
    }

    .no-orders {
        text-align: center;
        color: #555;
        padding: 40px 20px;
        font-size: 15px;
    }

    .actions-cell {
        white-space: nowrap;
    }

    .delete-form {
        display: inline;
    }

    .flash-messages {
        margin-bottom: 20px;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* Center no records message */
    td.dataTables_empty {
        text-align: center;
        color: #777;
        font-style: italic;
        padding: 30px !important;
    }

    /* Quantity badge styling */
    .quantity-badge {
        display: inline-block;
        background-color: #e8f5e9;
        color: #1D4A23;
        padding: 4px 10px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 13px;
    }
</style>

<div class="order-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="order-header">
        <div class="order-header-left">
            <h2>üì¶ Orders</h2>
            <p>Manage and view all customer orders here.</p>
        </div>
        <div class="order-header-right">
            <a href="{{ path('app_order_new') }}" class="btn btn-primary">+ Create New Order</a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="ordersTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if orders is defined and orders|length > 0 %}
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.customer }}</td>
                            <td>{{ order.product.name ?? 'N/A' }}</td>
                            <td>
                                <span class="quantity-badge">{{ order.quantity ?? 1 }}</span>
                            </td>
                            <td>‚Ç±{{ order.product ? order.product.price|number_format(2, '.', ',') : '0.00' }}</td>
                            <td><strong>‚Ç±{{ order.totalPrice|number_format(2, '.', ',') }}</strong></td>
                            <td>
                                {% if order.status == 'Pending' %}
                                    <span class="badge bg-warning">Pending</span>
                                {% elseif order.status == 'Processing' %}
                                    <span class="badge bg-info">Processing</span>
                                {% elseif order.status == 'Completed' %}
                                    <span class="badge bg-success">Completed</span>
                                {% elseif order.status == 'Cancelled' %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
                            <td>
                                {% if order.createdBy %}
                                    <span class="creator-badge {{ 'ROLE_ADMIN' in order.createdBy.roles ? 'creator-admin' : 'creator-staff' }}">
                                        {{ 'ROLE_ADMIN' in order.createdBy.roles ? 'üëë' : 'üë§' }} {{ order.createdBy.username }}
                                    </span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td class="actions-cell">
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info" title="View">üëÅÔ∏è View</a>
                                
                                {% set canEdit = is_granted('ROLE_ADMIN') or (order.createdBy and order.createdBy.id == app.user.id) %}
                                
                                {% if canEdit %}
                                    <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-sm btn-warning" title="Edit">‚úèÔ∏è Edit</a>
                                    <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" class="delete-form" onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete this order?\n\nOrder #{{ order.id }}\nCustomer: {{ order.customer }}\n\nThis action cannot be undone!');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">üóëÔ∏è Delete</button>
                                    </form>
                                {% else %}
                                    <span class="btn btn-sm btn-locked" title="You can only edit/delete your own records">üîí Locked</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="10" class="no-orders">
                            <p>No orders found.</p>
                            <a href="{{ path('app_order_new') }}" class="btn btn-primary" style="margin-top: 15px;">Create Your First Order</a>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready(function() {
    $('#ordersTable').DataTable({
        "order": [[0, "desc"]], // Sort by Order ID descending (newest first)
        "pageLength": 10,
        "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "All"]],
        "language": {
            "search": "üîç Search:",
            "lengthMenu": "Show _MENU_ entries",
            "info": "Showing _START_ to _END_ of _TOTAL_ orders",
            "infoEmpty": "No orders available",
            "infoFiltered": "(filtered from _MAX_ total orders)",
            "zeroRecords": "No matching orders found",
            "emptyTable": "No orders available in table",
            "paginate": {
                "first": "First",
                "last": "Last",
                "next": "Next",
                "previous": "Previous"
            }
        },
        "columnDefs": [
            { 
                "orderable": false, 
                "targets": [9] // Disable sorting on Actions column
            },
            {
                "type": "num",
                "targets": [3, 4, 5] // Quantity, Unit Price, and Total Price columns - for proper numeric sorting
            }
        ]
    });
});
</script>
{% endblock %}