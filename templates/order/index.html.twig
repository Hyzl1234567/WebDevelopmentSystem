 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Orders{% endblock %}

{% block body %}
<style>
    body {
        background-color: #fff;
        font-family: Arial, sans-serif;
    }

    .order-container {
        width: 90%;
        max-width: 1200px;
        margin: 40px auto;
        padding: 25px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .order-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .order-header-left h2 {
        color: #1D4A23;
        margin: 0 0 10px 0;
        font-size: 26px;
        font-weight: bold;
    }

    .order-header-left p {
        color: #555;
        margin: 0;
        font-size: 15px;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 14px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-sm {
        padding: 6px 12px;
        font-size: 13px;
        margin: 0 3px;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
    }

    .btn-info:hover {
        background-color: #2980b9;
    }

    .btn-warning {
        background-color: #FFD700;
        color: #333;
    }

    .btn-warning:hover {
        background-color: #e6c200;
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    thead {
        background-color: #1D4A23;
        color: white;
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
        font-size: 15px;
        border-bottom: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #f4f9ef;
        transition: 0.2s ease-in-out;
    }

    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: bold;
    }

    .bg-warning {
        background-color: #FFD700;
        color: #333;
    }

    .bg-success {
        background-color: #99CC67;
        color: #1D4A23;
    }

    .bg-danger {
        background-color: #E74C3C;
        color: white;
    }

    .bg-secondary {
        background-color: #bdc3c7;
        color: white;
    }

    .no-orders {
        text-align: center;
        color: #555;
        padding: 40px 20px;
        font-size: 15px;
    }

    .actions-cell {
        white-space: nowrap;
    }

    .delete-form {
        display: inline;
    }

    .flash-messages {
        margin-bottom: 20px;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="order-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="order-header">
        <div class="order-header-left">
            <h2>üì¶ Orders</h2>
            <p>Manage and view all customer orders here.</p>
        </div>
        <div class="order-header-right">
            <a href="{{ path('app_order_new') }}" class="btn btn-primary">+ Create New Order</a>
        </div>
    </div>

    <div class="table-responsive">
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if orders is defined and orders|length > 0 %}
                    {% for order in orders %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.customer }}</td>
                            <td>{{ order.product.name ?? 'N/A' }}</td>
                            <td>
                                {% if order.status == 'Pending' %}
                                    <span class="badge bg-warning">Pending</span>
                                {% elseif order.status == 'Completed' %}
                                    <span class="badge bg-success">Completed</span>
                                {% elseif order.status == 'Cancelled' %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% else %}
                                    <span class="badge bg-secondary">Unknown</span>
                                {% endif %}
                            </td>
                            <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '‚Äî' }}</td>
                            <td class="actions-cell">
                                <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn btn-sm btn-info" title="View">üëÅÔ∏è View</a>
                                <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-sm btn-warning" title="Edit">‚úèÔ∏è Edit</a>
                                <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete">üóëÔ∏è Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="no-orders">
                            <p>No orders found.</p>
                            <a href="{{ path('app_order_new') }}" class="btn btn-primary" style="margin-top: 15px;">Create Your First Order</a>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}