 {% extends 'dashboard/layout.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block body %}
<style>
    .form-container {
        width: 90%;
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        background: white;
        box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    }

    .form-header {
        border-bottom: 3px solid #1D4A23;
        padding-bottom: 15px;
        margin-bottom: 30px;
    }

    .form-header h1 {
        color: #1D4A23;
        font-size: 28px;
        font-weight: bold;
        margin: 0;
    }

    .form-header p {
        color: #666;
        font-size: 14px;
        margin: 8px 0 0 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        color: #1D4A23;
        font-weight: bold;
        margin-bottom: 8px;
        font-size: 15px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #1D4A23;
        box-shadow: 0 0 0 3px rgba(29, 74, 35, 0.1);
    }

    .form-control:hover {
        border-color: #99CC67;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
        flex-wrap: wrap;
        gap: 10px;
    }

    .form-actions-left {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 15px;
        font-weight: bold;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        display: inline-block;
    }

    .btn-primary {
        background-color: #1D4A23;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2d6b34;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(29, 74, 35, 0.3);
    }

    .btn-secondary {
        background-color: #bdc3c7;
        color: #333;
    }

    .btn-secondary:hover {
        background-color: #95a5a6;
        transform: translateY(-2px);
    }

    .btn-danger {
        background-color: #E74C3C;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .delete-form {
        display: inline;
        margin: 0;
    }

    .form-error {
        color: #E74C3C;
        font-size: 13px;
        margin-top: 5px;
    }

    .alert {
        padding: 12px 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>

<div class="form-container">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <div class="form-header">
        <h1>‚úèÔ∏è Edit Order #{{ order.id }}</h1>
        <p>Update the order details below</p>
    </div>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.customer) }}
            {{ form_widget(form.customer, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.customer) }}
        </div>

        <div class="form-group">
            {{ form_label(form.product) }}
            {{ form_widget(form.product, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.product) }}
        </div>

        <div class="form-group">
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.quantity) }}
        </div>

        <div class="form-group">
            {{ form_label(form.status) }}
            {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.status) }}
        </div>

        {{ form_rest(form) }}

        <div class="form-actions">
            <div class="form-actions-left">
                <button type="submit" class="btn btn-primary">üíæ Update Order</button>
                <a href="{{ path('app_order_index') }}" class="btn btn-secondary">‚Üê Back to List</a>
            </div>
        </div>
    {{ form_end(form) }}

    {# Delete form MUST be outside the update form #}
    {% set canDelete = is_granted('ROLE_ADMIN') or (order.createdBy and order.createdBy.id == app.user.id) %}
    
    {% if canDelete %}
        <div class="form-actions" style="margin-top: 20px; border-top: 2px dashed #e0e0e0; padding-top: 20px;">
            <div class="form-actions-left"></div>
            <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" class="delete-form" id="deleteOrderForm">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                <button type="button" class="btn btn-danger" id="deleteOrderButton">üóëÔ∏è Delete Order</button>
            </form>
        </div>
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const deleteButton = document.getElementById('deleteOrderButton');
    const deleteForm = document.getElementById('deleteOrderForm');
    
    if (deleteButton && deleteForm) {
        deleteButton.addEventListener('click', function(e) {
            e.preventDefault();
            
            const orderId = "{{ order.id }}";
            const customerName = "{{ order.customer|escape('js') }}";
            const productName = "{{ order.product ? order.product.name|escape('js') : 'N/A' }}";
            const totalPrice = "{{ order.totalPrice|number_format(2) }}";
            
            const confirmMessage = `‚ö†Ô∏è WARNING: DELETE CONFIRMATION

Are you ABSOLUTELY SURE you want to delete this order?

Order ID: #${orderId}
Customer: ${customerName}
Product: ${productName}
Total: ‚Ç±${totalPrice}

‚ö†Ô∏è THIS ACTION CANNOT BE UNDONE!

Click OK to DELETE, or Cancel to keep the order.`;
            
            if (confirm(confirmMessage)) {
                deleteForm.submit();
            }
        });
    }
});
</script>
{% endblock %}