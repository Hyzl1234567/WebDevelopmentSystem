 {% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<style>
    body {
        background: #99CC67;
        font-family: 'Arial', sans-serif;
    }

    .product-show-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        max-width: 1000px;
        margin: 40px auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,1);
        overflow: hidden;
    }

    /* Left column - Image */
    .product-left {
        background: #F5F5DC;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .product-left img {
        max-width: 100%;
        max-height: 400px;
        object-fit: contain;
        border-radius: 8px;
    }

    /* Right column - Details */
    .product-right {
        padding: 40px;
        background: #white;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .product-right h2 {
        font-size: 32px;
        color: black;
        margin-bottom: 15px;
    }

    .product-description {
        font-size: 16px;
        line-height: 1.6;
        color: black;
        margin-bottom: 25px;
    }

    .product-details {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 25px;
    }

    .detail {
        display: flex;
        align-items: left;
        gap: 10px;
        font-size: 15px;
        color: #black;
    }

    .detail span {
        font-weight: bold;
        padding: 4px 10px;
        border-radius: 6px;
        color: #1D4A23;
        min-width: 100px;
        text-align: left;
    }

    /* Badge styling */
    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 13px;
        font-weight: bold;
        color: white;
    }

    .badge-admin {
        background-color: #9b59b6;
    }

    .badge-staff {
        background-color: #3498db;
    }

    .badge-unknown {
        background-color: #95a5a6;
    }

    .product-price {
        font-size: 40px;
        font-weight: bold;
        color: #1D4A23;
        margin-bottom: 25px;
    }

    .product-actions {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
    }

    .back-btn, .edit-btn, .delete-btn {
        text-decoration: none;
        padding: 10px 18px;
        border-radius: 8px;
        font-weight: bold;
        transition: 0.3s;
        border: none;
        cursor: pointer;
    }

    .back-btn {
        background: #f5f5f5;
        color: black;
    }

    .back-btn:hover {
        background: #6F4E37;
        color: #fff;
    }

    .edit-btn {
        background: #e8f5e9;
        color: black;
    }

    .edit-btn:hover {
        background: #1D4A23;
        color: white;
    }

    .delete-btn {
        background: #f8d7da;
        color: black;
    }

    .delete-btn:hover {
        background: #c9302c;
        color: white;
    }

    .warning-message {
        padding: 15px;
        background-color: #fff3cd;
        border-radius: 8px;
        color: #856404;
        font-size: 14px;
        margin-top: 15px;
        text-align: center;
    }

    .delete-form {
        display: inline;
        margin: 0;
    }
</style>

<div class="product-show-container">
    <div class="product-left">
        {% if product.image %}
            <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}">
        {% else %}
            <div style="color: #999;">No image available</div>
        {% endif %}
    </div>

    <div class="product-right">
        <div>
            <h2>{{ product.name }}</h2>
            <p class="product-description">{{ product.description }}</p>

            <div class="product-details">
                <div class="detail">
                    <span>ID:</span> {{ product.id }}
                </div>
                <div class="detail">
                    <span>Category:</span> {{ product.category }}
                </div>
                <div class="detail">
                    <span>Quantity:</span> {{ product.quantity }}
                </div>
                <div class="detail">
                    <span>Created At:</span> {{ product.createdAt ? product.createdAt|date('F d, Y') : '‚Äî' }}
                </div>
                <div class="detail">
                    <span>Created By:</span>
                    {% if product.createdBy %}
                        <span class="badge {{ 'ROLE_ADMIN' in product.createdBy.roles ? 'badge-admin' : 'badge-staff' }}">
                            {{ 'ROLE_ADMIN' in product.createdBy.roles ? 'üëë Admin' : 'üë§ Staff' }} - {{ product.createdBy.username }}
                        </span>
                    {% else %}
                        <span class="badge badge-unknown">Unknown</span>
                    {% endif %}
                </div>
            </div>

            <p class="product-price">‚Ç±{{ product.price|number_format(2, '.', ',') }}</p>
        </div>

        <div class="product-actions">
            <a href="{{ path('app_product_index') }}" class="back-btn">‚¨Ö Back</a>
            
            {% set canEdit = is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
            
            {% if canEdit %}
                <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit-btn">‚úè Edit</a>
                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" class="delete-form"
                      onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete this product?\n\nProduct: {{ product.name }}\nPrice: ‚Ç±{{ product.price|number_format(2) }}\n\nThis action cannot be undone!');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
                </form>
            {% endif %}
        </div>

        {% if not canEdit %}
            <div class="warning-message">
                üîí You can only edit or delete your own records. This product was created by 
                {% if product.createdBy %}
                    <strong>{{ product.createdBy.username }}</strong>
                {% else %}
                    <strong>another user</strong>
                {% endif %}.
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}